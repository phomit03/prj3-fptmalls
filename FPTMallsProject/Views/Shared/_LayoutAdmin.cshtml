@inject SignInManager<IdentityUser> _signinManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <title>@ViewBag.Title</title>

    @RenderSection("AdminStyles", required: false)

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: rgb(51, 53, 69)">
        <div class="container">
            <a asp-controller="Admin" asp-action="Index" class="navbar-brand">FPT Malls</a>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a asp-controller="Admin" asp-action="Index" class="nav-link">Home</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Admin" asp-action="Shops" class="nav-link">Shops</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Admin" asp-action="Brands" class="nav-link">Brands</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Admin" asp-action="BrandIntroductions" class="nav-link">Brand Introductions</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Admin" asp-action="Movies" class="nav-link">Movies</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Admin" asp-action="Shows" class="nav-link">Shows</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Admin" asp-action="Bookings" class="nav-link">Bookings</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Admin" asp-action="Feedbacks" class="nav-link">Feedbacks</a>
                    </li>
                </ul>
                <ul class="navbar-nav ml-auto">
                    @if (_signinManager.IsSignedIn(User))
                    {
                        @*<li class="nav-item">
                            <a asp-controller="Booking" asp-action="ViewBookings" class="nav-link">Your Bookings</a>
                        </li>*@
                        <li class="nav-item">
                            <span class="nav-link active">Hi, @User.Identity.Name</span>
                        </li>
                        <li class="nav-item">
                            <form asp-controller="Account" asp-action="Logout">
                                <input type="submit" value="Logout" class="nav-link btn btn-link">
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a asp-controller="Account" asp-action="Login" class="nav-link">Login</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Account" asp-action="Register" class="nav-link">Register</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    @RenderBody()

    <script src="~/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace('editor', {
            filebrowserUploadUrl: '@Url.Action("UploadImage", "Admin")',
            filebrowserBrowseUrl: '@Url.Action("UploadExplorer", "Admin")'
        });
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("AdminScripts", required: false)
</body>
</html>
