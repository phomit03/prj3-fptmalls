<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["TitleMalls"] | FPTMalls</title>
    <link rel="icon" type="image/x-icon" href="~/fptimage/favicon.png">


    <!-- Vendor CSS Files -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/c93df1357e.js" crossorigin="anonymous"></script>
    <link href="~/css/boxicons.min.css" rel="stylesheet">
    <link href="~/css/owl.carousel.min.css" rel="stylesheet">
    <link href="~/css/aos.css" rel="stylesheet">

    <!-- map css -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/magnify/2.3.3/css/magnify.min.css"
          integrity="sha384-zgeBTQFrgFlfbkIvYYXfMlTh2T2Irl05Ne3hMa9yrQO02yp/zTT/PMtwFc5wrVot" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/map.css">
    <!-- Template Main CSS File -->
    <link href="~/css/style.css" rel="stylesheet">

    <link href="~/css/fptmalls.min.css" rel="stylesheet">

    <link href="~/css/feedback.css" rel="stylesheet">

    <style type="text/css"></style>

    <!-- GA4 Custom Unique Pageview Tracking -->
    <script src="~/js/ga.js"></script>

</head>
<body>
    <header id="header" class="fixed-top" name="top">
        <div class="container-fluid d-flex">

            <div class="logo mr-auto">
                <div id="logo" class="text-light px-2 px-md-0">
                    <a asp-controller="Home" asp-action="Index">
                        <img src="~/fptimage/logofptmalls.png" alt="logofptmall" />
                    </a>
                </div>
                <!-- Uncomment below if you prefer to use an image logo -->
                <!-- <a href="index.html"><img src="assets/img/logo.png" alt="" class="img-fluid"></a>-->
            </div>

            <div class="d-flex flex-grow-1 d-xl-flex align-items-center">
                <div class="center-info__wrapper">
                    <div id="title-time" class="row center-info__status-title"></div>
                    <div class="row fs-14 text-muted text-nowrap">07:30 AM - 10:30 PM</div>

                </div>

            </div>


            <nav class="nav-menu d-none d-lg-block">
                <ul>
                    <li class="">
                        <a asp-controller="Home" asp-action="Index" class="text-uppercase">Home</a>
                    </li>
                    <li class="drop-down">
                        <a asp-controller="FptMall" asp-action="Index" class="text-uppercase">FPT Malls</a>
                        <ul>
                            <li class="">
                                <a asp-controller="FptMall" asp-action="Fashion" class="text-uppercase">Fashion</a>
                            </li>
                            <li class="">
                                <a asp-controller="FptMall" asp-action="FoodCourts" class="text-uppercase">Food Courts</a>
                            </li>
                            <li class="">
                                <a asp-controller="FptMall" asp-action="Galleries" class="text-uppercase">Galleries</a>
                            </li>
                            <li class="">
                                <a asp-controller="FptMall" asp-action="Other" class="text-uppercase">Other</a>
                            </li>
                        </ul>

                    </li>
                    <li class="">
                        <a asp-controller="Movie" asp-action="Index" class="text-uppercase" target="_blank">Cinema</a>
                    </li>
                    <li class="">
                        <a asp-controller="Home" asp-action="Utilities" class="text-uppercase">UTILITIES</a>
                    </li>
                    <li class="">
                        <a asp-controller="Home" asp-action="MyFpt" class="text-uppercase">MY FPT</a>
                    </li>
                    <li class="d-none d-md-block">
                        <a href="https://m.me/smsupermalls" target="_blank">
                            <img src="https://www.smsupermalls.com/themes/revamp2022/assets/img/messenger.svg"
                                 class="messenger-icon" />
                        </a>
                    </li>
                </ul>
            </nav><!-- .nav-menu -->

        </div>
    </header>


    <main id="main" role="main" class="pb-3">
        @RenderBody()
    </main>


    <footer id="footer">

        <div class="footer-link container py-4 text-center">
            <ul class="nav justify-content-center">
                <li class="nav-item">
                    <strong class="nav-link font-medium">
                        <span>
                            &copy;2022 Copyright FPT Malls. All Rights
                            Reserved
                        </span>
                    </strong>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-black text-uppercase" asp-controller="Home" asp-action="About">About Us</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-black text-uppercase" asp-controller="Home" asp-action="Contact" target="_top">Contact Us</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-black text-uppercase" asp-controller="Home" asp-action="Disclaimer"
                       target="_top">Disclaimer</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-black text-uppercase" asp-controller="Home" asp-action="Privacy" target="_top">
                        Privacy
                        Policy
                    </a>
                </li>
            </ul>
        </div>
        <a href="#top" id="backtotop" class="backtotop text-white"><i class="fa-solid fa-arrow-up"></i></a>
    </footer>
    <!-- Vendor JS Files -->
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/jquery.easing.min.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/aos.js"></script>
    <script src="~/js/jquery.lazy.min.js"></script>

    <!-- Template Main JS File -->
    <script src="~/js/main.js"></script>
    <!-- map js -->
    <script src="https://afarkas.github.io/lazysizes/lazysizes.min.js"
            integrity="sha384-3gT/vsepWkfz/ff7PpWNUeMzeWoH3cDhm/A8jM7ouoAK0/fP/9bcHHR5kHq2nf+e"
            crossorigin="anonymous"></script>
    <div class="contact" id="contact_info">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"
                integrity="sha384-ZvpUoO/+PpLXR1lu4jmpXWu80pZlYUAfxl5NsBMWOEPSjUn/6Z/hRTt8+pR6L4N2"
                crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.min.js"
                integrity="sha384-OOQxAlvDeToeGLa7+PiUtbtpQyESK8Ej4fNM8foz5VaMpO8TCp1vbi2HIOIzMurt"
                crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/magnify/2.3.3/js/jquery.magnify.min.js"
                integrity="sha384-XfAd/+mEhljko1w/xpMz8Bus1OcLvGuqKoBOtSMzOaY5flEEQOR9KMTpzuFdT6e2"
                crossorigin="anonymous"></script>
        <script type="text/javascript"
                src="~/js/fake.js"></script>
    </div>
    @await RenderSectionAsync("MallScripts", required: false)
</body>
</html>