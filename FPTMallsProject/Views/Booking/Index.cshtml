@model BookingIndexViewModel

@{
    Layout = "_LayoutCinema";
    ViewData["TitleCinema"] = "Show Dates";
}


<div class="hero common-hero">
    <div class="container">
        <div class="row">

            <div class="col-md-12">

                <div class="hero-ct">
                    <a asp-controller="Movie" asp-action="Index" class="backBtn">
                        <button class="btn btn-back me-2 my-2">&laquo; Back </button>
                    </a>
                    <br />
                    <br />
                    <h2 class="title">@Model.MovieTitle</h2>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="page-single movie_list">
    <div class="container">
        <div class="row ipad-width2">


            <div class="col-md-12 col-sm-12 col-xs-12">



                <form asp-action="Index" method="post">
                    <input type="hidden" asp-for="MovieId">
                    <input type="hidden" asp-for="MovieTitle">

                    <h4 class="my-3 text-muted">Select Date</h4>

                    <div class="radio-container">
                        @foreach (var date in Model.ShowDates)
                        {
                            <div class="radio-item">
                                <input asp-for="ShowDate" type="radio" value="@date.Value" class="btn-check" id="@date.Value">
                                <label for="@date.Value">@date.Text</label>
                            </div>
                        }
                    </div>


                    <span asp-validation-for="ShowDate" class="text-danger mx-3"></span>

                    <h4 class="my-3 text-muted">Select Language</h4>

                    <div class="radio-container">
                        @foreach (var language in Model.Languages)
                        {
                            <div class="radio-item">
                                <input asp-for="Language" type="radio" value="@language.Value" class="btn-check" id="@language.Value">
                                <label for="@language.Value" class="btn btn-outline-dark me-1">@language.Text</label>
                            </div>
                        }
                    </div>

                    <span asp-validation-for="Language" class="text-danger mx-3"></span>

                    <br /><br />

                    <button type="submit" class="btn btn-next my-4">Next &raquo;</button>
                </form>
            </div>
        </div>
    </div>
</div>


@****************************************************CSS***********************************************************@

@section CinemaStyles {
    <style>
        .text-danger {
            margin-top: 5px;
            color: red;
        }

        .btn-back {
            float: left;
            color: white;
            background-color: #343a40;
            padding: 6px 20px;
            font-size: 17px;
            border-radius: 5px;
            border: none;
            font-weight: bold;
        }

            .btn-back:hover {
                background-color: #2c2f32;
            }

        .title {
            margin-top: 30px;
            color: white;
            font-size: 60px;
            text-align: center
        }


        .text-muted {
            font-size: 30px;
            padding: 20px 0;
            color: white;
        }

        .title:hover {
            color: #dcf836;
        }

        .radio-container {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            margin-bottom: 15px;
        }

            .radio-container .radio-item {
                display: flex;
                align-items: center;
            }

                .radio-container .radio-item input[type="radio"] {
                    display: none;
                }

                .radio-container .radio-item label {
                    display: inline-block;
                    padding: 8px 16px;
                    border: 1px solid #dcf836;
                    border-radius: 5px;
                    font-size: 16px;
                    cursor: pointer;
                    color: #dcf836;
                }

                .radio-container .radio-item input[type="radio"]:checked + label {
                    background-color: #dd003f;
                    color: white;
                }

                .radio-container .radio-item label:hover {
                    background-color: #dd003f;
                    color: white;
                }

                .radio-container .radio-item input[type="radio"]:hover + label {
                    background-color: #dd003f;
                    color: white
                }


        .btn-next {
            float: right;
            color: #020d18;
            background-color: #dcf836;
            padding: 6px 20px;
            font-size: 17px;
            border-radius: 5px;
            border: none;
            font-weight: bold;
        }


            .btn-next:hover {
                background-color: #b3cb26;
            }
    </style>
}