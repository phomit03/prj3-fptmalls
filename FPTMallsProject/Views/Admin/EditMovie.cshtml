@model MovieEditViewModel

@{
    ViewBag.Title = "Edit Movie | Admin";
    Layout = "_LayoutAdmin";

    string posterPath = "~/images_cinema/" + Model.ExistingPosterPath;
}

<div class="container">
    <h2 class="my-3">
        Edit movie
        <a asp-controller="Admin" asp-action="Movies" class="btn btn-warning" style="float:right">Back List Movie</a>
    </h2>
    <hr class="text-primary" />
    <form asp-action="EditMovie" method="post" enctype="multipart/form-data">
        <input asp-for="Id" hidden />
        <input asp-for="ExistingPosterPath" hidden />
        <table class="table table-borderless">
            <tr>
                <td style="width:200px">
                    <label asp-for="Title" class="form-lable"></label>
                </td>
                <td>
                    <input asp-for="Title" class="form-control w-50" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="ReleaseYear" class="form-lable"></label>
                </td>
                <td>
                    <input type="date" asp-for="ReleaseYear" class="form-control w-50" />
                    <span asp-validation-for="ReleaseYear" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="Ratings" class="form-lable"></label>
                </td>
                <td>
                    <input type="number" min="1" max="10" value="1" asp-for="Ratings" class="form-control w-50" />
                    <span asp-validation-for="Ratings" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="Duration" class="form-lable"></label>
                </td>
                <td>
                    <input type="time" asp-for="Duration" class="form-control w-50" />
                    <span asp-validation-for="Duration" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <td style="width:200px">
                    <label asp-for="Language" class="form-lable"></label>
                </td>
                <td>
                    <input asp-for="Language" class="form-control w-50" />
                    <span asp-validation-for="Language" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <td style="width:200px">
                    <label asp-for="Actor" class="form-lable"></label>
                </td>
                <td>
                    <input asp-for="Actor" class="form-control w-50" />
                    <span asp-validation-for="Actor" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <td style="width:200px">
                    <label asp-for="Director" class="form-lable"></label>
                </td>
                <td>
                    <input asp-for="Director" class="form-control w-50" />
                    <span asp-validation-for="Director" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <td style="width:200px">
                    <label asp-for="Genre" class="form-lable"></label>
                </td>
                <td>
                    <input asp-for="Genre" class="form-control w-50" />
                    <span asp-validation-for="Genre" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <td style="width:200px">
                    <label asp-for="Trailer" class="form-lable"></label>
                </td>
                <td>
                    <input asp-for="Trailer" class="form-control w-50" />
                    <span asp-validation-for="Trailer" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="Describe" class="form-lable"></label>
                </td>
                <td>
                    <textarea asp-for="Describe" class="form-control w-50" cols="20" rows="5"></textarea>
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="Poster" class="form-lable"></label>
                </td>
                <td>
                    <input asp-for="Poster" class="form-control w-50" />
                </td>
            </tr>
            <tr>
                <td>
                    Existing Poster
                </td>
                <td>
                    @if (Model.ExistingPosterPath == null)
                    {
                        <p class="text-muted">No Poster</p>
                    }
                    else
                    {
                        <img src="@posterPath" asp-append-version="true" width="200" height="300" />
                    }
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <button type="submit" class="btn btn-primary">Update</button>
                </td>
            </tr>
        </table>
    </form>
</div>