                </td>
            </tr>
            <tr>
                <td style="width:200px">
                    <label class="form-lable">Content</label>
                </td>
                <td>
                    <textarea asp-for="Content" class="form-control w-50" id="editor"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <td style="width:200px">
                    <label class="form-lable">Brands</label>
                </td>
                <td>
                    <select asp-for="Id_Brand" class="form-contro w-50l" asp-items="ViewBag.Id_Brand"></select>
                    <span asp-validation-for="Id_Brand" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <button type="submit" class="btn btn-primary">Update</button>
                </td>
            </tr>
        </table>
    </form>
</div>



@section AdminScripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}