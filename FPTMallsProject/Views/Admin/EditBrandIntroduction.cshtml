@model BrandIntroduction

@{
    ViewBag.Title = "Edit_BrandIntroduction | Admin";
    Layout = "_LayoutAdmin";

}

<div class="container">
    <h2 class="my-3">
        Edit brand_introduction
        <a asp-controller="Admin" asp-action="BrandIntroductions" class="btn btn-warning" style="float:right">Back List Brand_Introductions</a>
    </h2>
    <hr class="text-primary" />
    <form asp-action="EditBrandIntroduction" method="post" enctype="multipart/form-data">
        <input asp-for="Id" hidden />
        <table class="table table-borderless">
            <tr>
                <td style="width:200px">
                    <label asp-for="Title" class="form-lable"></label>
                </td>
                <td>
                    <input asp-for="Title" class="form-control w-50" />
