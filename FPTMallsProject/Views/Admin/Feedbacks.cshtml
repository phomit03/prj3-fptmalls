@model IEnumerable<Feedback>

@{
    ViewBag.Title = "Feedbacks | Admin";
    Layout = "_LayoutAdmin";

    var index = 0;
}

<div class="container my-3">
    <h2 class="my-3">List of feedback customer</h2>
    <hr class="text-primary"/>
    <table class="table table-hover my-3">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Title</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var feedback in Model)
            {
                index++;
                <tr>
                    <td>@index</td>
                    <td>@Html.DisplayFor(modelItem => feedback.Name)</td>
                    <td>@Html.DisplayFor(modelItem => feedback.Phone)</td>
                    <td>@Html.DisplayFor(modelItem => feedback.Name)</td>
                    <td>@Html.DisplayFor(modelItem => feedback.Title)</td>
                    <td>@Html.DisplayFor(modelItem => feedback.Description)</td>
                </tr>
            }
        </tbody>
    </table>
</div>
