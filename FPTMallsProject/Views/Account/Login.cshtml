@model LoginViewModel

@{
    Layout = "_LayoutAccount";
    ViewData["AccountTitle"] = "Login";
}


<div class="container">
    <div class="signup-content">
        <form method="post" class="signup-form" asp-action="Login" asp-route-returnUrl="@ViewBag.ReturnUrl">
            <div asp-validation-summary="All" style="color: black"></div>

            <h2>Login to your account</h2>
            <p class="desc">Please login to be able to book tickets and view more details</p>
            <div class="form-group">
                <input asp-for="UserName" class="form-input" placeholder="Username or Email" />
            </div>
            <div class="form-group">
                <input asp-for="Password" class="form-input" placeholder="Password" />
            </div>
            <div class="form-group">
                <input type="checkbox" name="agree-term" id="agree-term" asp-for="RememberMe" class="agree-term" />
                <label for="agree-term" class="label-agree-term"><span><span></span></span>I agree all statements in  <a href="#" class="term-service">Terms of service</a></label>
            </div>
            <div class="form-group">
                <input type="submit" class="form-submit submit" value="Sign in" />
                <a asp-controller="Account" asp-action="Register" class="submit-link submit">Sign up</a>

            </div>
        </form>
    </div>
</div>
