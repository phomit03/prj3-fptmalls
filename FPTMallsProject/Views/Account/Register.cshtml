@model RegisterViewModel

@{
    Layout = "_LayoutAccount";
    ViewData["AccountTitle"] = "Register";
}


<div class="container">
    <div class="signup-content">
        <form method="post" class="signup-form" asp-action="Register">
            <div asp-validation-summary="All" style="color: black"></div>

            <h2>
                Create a new account
            </h2>
            <p class="desc">to receive many attractive promotions only for <span>“FPT Cinema members”</span></p>
            <div class="form-group">
                <input asp-for="UserName" class="form-input" placeholder="Username" />
            </div>
            <div class="form-group">
                <input asp-for="Email" class="form-input" placeholder="Email" />
            </div>
            <div class="form-group">
                <input asp-for="Password" class="form-input" placeholder="Password" />
            </div>
            <div class="form-group">
                <input asp-for="ConfirmPassword" class="form-input" placeholder="Confirm Password" />
            </div>
            <div class="form-group">
                <label for="agree-term" class="label-agree-term">Do you already have an account?  
                    <a asp-controller="Account" asp-action="Login" class="term-service">
                        Sign in
                    </a>
                </label>
            </div>
            <div class="form-group">
                <input type="submit" class="form-submit submit" value="Sign up" />
            </div>
        </form>
    </div>
</div>
